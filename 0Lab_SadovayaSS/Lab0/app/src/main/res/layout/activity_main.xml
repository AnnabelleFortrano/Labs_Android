<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="104dp"
            android:layout_height="27dp"
            android:clickable="true"
            android:text="Привет, Земля!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.605" />

    <Button
            android:id="@+id/MAINbutton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="88dp"
            android:layout_height="54dp"
            android:layout_marginStart="181dp"
            android:layout_marginTop="134dp"
            android:layout_marginEnd="181dp"
            android:layout_marginBottom="100dp"
            android:text="Выход"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.569" />

    <Button
            android:text="Подпишись на страницу создателя))"
            android:layout_width="233dp"
            android:layout_height="0dp"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="89dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="33dp"
            android:layout_marginBottom="290dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="89dp"
            style="@android:style/Widget.Button.Inset"/>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="287dp"
            android:layout_height="256dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

</android.support.constraint.ConstraintLayout>